working_dir=`pwd`
buildroot=$working_dir/temp
cd ../..
make clean
make ENABLE_OCILIB=1 ENABLE_LIBDBI=0
mkdir -p $buildroot/op5/merlin
mkdir -p $buildroot/op5/merlin/logs
 
gsed -i \
	-e 's#grep#/usr/xpg4/bin/grep#" \
	-e 's#mysql="mysql"#mysql="/opt/csw/mysql5/bin/mysql" \
		install-merlin.sh

mkdir -p $buildroot/op5/merlin/logs
cp merlind $buildroot/op5/merlin/
cp import $buildroot/op5/merlin/
cp merlin.so $buildroot/op5/merlin/
cp *.php $buildroot/op5/merlin/
cp *.sh $buildroot/op5/merlin/
cp *.sql $buildroot/op5/merlin/
cp -r sql $buildroot/op5/merlin/

gsed \
	-e 's# php # /opt/csw/php5/bin/php #' \
	-e 's#@@DESTDIR@@#/op5/monitor/op5/merlin/" \
	-e 's/@@DBNAME@@/merlin/' \
	-e 's/@@DBUSER@@/merlin/' \
	-e 's/@@DBPASS@@/merlin/' \
	-e 's/@@DBTYPE@@/mysql/' \
		example.conf > $buildroot/op5/merlin/merlin.conf
